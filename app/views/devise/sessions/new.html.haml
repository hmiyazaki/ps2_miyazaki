.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'} ) do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email, {class: 'sr-only', :for => "userEmail"}

    \Email address
    = f.text_field :email, {:type => "email",:class => 'form-control', :id => 'inputEmail', :autofocus => "", :placeholder => "メールアドレス", :required => ""}
    = f.label :password, {class: 'sr-only', :for => "inputPassword"}
    %br
    \Password
    = f.text_field :password, {class: 'form-control', id: 'inputPassword', :autofocus => "", :placeholder => "パスワード", :required => "", :type => "password"}
    .checkbox
      %label
        = f.check_box(:remember_me,{:checked=>false},"remember me","") 
      \Remember me
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}Sign in
  .text-center
    %p 
      Not a member? 
      %a{:href => "sign_up"} Sign up now